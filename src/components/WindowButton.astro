---
export interface Props {
  action: 'close' | 'minimaize' | 'maximaize'
}

const ACTIONS = {
  close: 'FF605C',
  minimaize: 'FFBD44',
  maximaize: '80CA4E',
}

const { action } = Astro.props as Props
const backgounrdColor = ACTIONS[action]
---

<div class={`w-3 h-3 rounded-full bg-[#${backgounrdColor}]`}></div>
